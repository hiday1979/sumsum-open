<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sumsum.gates.vice.hiday.AboutUsFragment"
    android:background="@drawable/mainscreenbackground">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/backgroun_black_opacity"
        android:onClick="returnToPage">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About us.."
            android:id="@+id/textView3"
            android:layout_marginTop="24dp"
            android:textColor="#ffff"
            android:textSize="35sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView

            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="Everything is possible. We, Hiday Hechler and Vice Priborkin, as the developers of this awasome app, strongly believe that with a great passion and big effort anyone can bring a lifechanging idea to the world. We are proud to present the world SumSum application, which takes the everyday life one step further. This is only the beginning of something great. Enjoy the app, and let us know if you will come up with an idea for improvement. "
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mainlogo"
            android:layout_below="@+id/tvContent"
            android:padding="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</FrameLayout>
